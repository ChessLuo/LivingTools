/* pages/index/index.wxss */
.page-body {
  width: 100%;
  min-height: 100%;
  display:flex;
  flex-direction:column;
  justify-content: space-between;
  font-size: 32rpx;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
/**白线**/
.wline {
  border: 1rpx solid white;
}

.top{
  width: 100%;
  height: 52vh;
}
.img-bg {
  width: 100%;
  height: 52vh;
  /* background-color:#FF545A;  */
}
.top-context {
  /* margin-top: 180rpx; */
  padding-top: 130rpx;
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 52vh;
  color: #fff;
}
.currentWeather { 
   padding: 50rpx;
   font-size: 40rpx;
}
.temp-view {
  width: 100%;
  display: flex;
  flex-direction: row;
  font-size: 70rpx;
}
.temp {
  font-size: 115rpx;
}
.weatherDetail {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 40rpx;
  position: absolute;
  bottom: 20rpx;
  text-align: center
}
.bold {
  font-weight: bold;
  margin-top: 10rpx;
}





.future-weather-view {
  padding: 30rpx;
  margin: 16rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #fff;
  justify-content: space-between;
  align-items: center;
  text-align: center;
}

.forecast-img {
  width: 60rpx;
  height: 60rpx;
  margin-right: 16rpx;
}